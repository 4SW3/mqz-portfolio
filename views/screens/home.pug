mixin worklist({id, url, title, media_url, media_alt})
  article.work_list_item
    h3.list_item_title(data-animation='home-text' data-url='/') #{title}
    a.work_list_link(href=`${url}`)
      .list_item_container.lic-0
        figure.list_item_media
          img.list_item_media_image.webgl_media_placeholder(
            crossOrigin=''
            data-src=`${media_url}.png`
            data-src-webp=`${media_url}.webp` 
            data-media-id=`${id}`
            alt=`${media_alt}`
          )

.home
  .home_content
    section#intro.intro
      .intro_content(data-src='/media/intro.mp4')
        .intro_text
          .tt
        .intro_arrow_text
          | scroll
          svg.intro_arrow_icon(version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' x='0px' y='0px' viewbox='0 0 22 35' xml:space='preserve')
