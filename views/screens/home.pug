        +worklist({
          id: 'ecommerce',
          url: '/case/ecommerce',
          title: 'ECOMMERCE APPLICATION',
          media_url: '/media/ecommerce/thumb',
          media_alt: 'ecommerce'
        })
        +worklist({
          id: 'game-wiki-and-build-editor',
          url: '/case/game-wiki-and-build-editor',
          title: 'DATABASE & BUILD EDITOR',
          media_url: '/media/dbbe/thumb',
          media_alt: 'game wiki and build editor'
        })
        +worklist({
          id: 'bugtracker',
          url: '/case/bugtracker',
          title: 'BUGTRACKER APPLICATION',
          media_url: '/media/bugtracker/thumb',
          media_alt: 'bugtracker'
        })

